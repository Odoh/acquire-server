<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Acquire Games</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script>$(function(){$("#menu").load("/html/menu.html");});</script>
    <link rel="stylesheet" type='text/css' href="/css/menu.css">
    <link rel="stylesheet" href="/css/table.css">
</head>
<body>
    <div id="menu"></div>
    <h1>Acquire Games</h1>
    <table>
        <thead>
        <tr>
            <th>Last Move</th>
            <th>Turn</th>
            <th>State</th>
            <th>Active Player</th>
            <th>Observers</th>
            <th>Players</th>
            <th>Id</th>
        </tr>
        </thead>
        <tbody>
        {{#overviews}}
        <tr>
            <td>{{lastReqTime}}</td>
            <td>{{turn}}</td>
            <td>{{state}}</td>
            <td>{{activePlayer}}</td>
            <td>{{sessions}} <a href="game/{{id}}/gui">watch</a></td>
            <td>
                {{#players}}
                 <a href="game/{{id}}/gui?player={{.}}">{{.}}</a>
                {{/players}}
            </td>
            <td>{{id}}</td>
        </tr>
        {{/overviews}}
        </tbody>
    </table>
</body>
</html>
